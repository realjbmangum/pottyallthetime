---
// Skeleton loader for VendorCard - shows while data is loading
---

<div class="bg-white rounded-2xl shadow-md overflow-hidden animate-pulse">
  <div class="p-6">
    <!-- Header skeleton -->
    <div class="flex items-start justify-between mb-4">
      <div class="flex-1">
        <div class="h-5 bg-gray-200 rounded w-3/4 mb-2"></div>
        <div class="h-4 bg-gray-200 rounded w-1/2 mb-2"></div>
        <div class="flex items-center mt-2">
          <div class="flex gap-1">
            {[1, 2, 3, 4, 5].map(() => (
              <div class="w-4 h-4 bg-gray-200 rounded"></div>
            ))}
          </div>
          <div class="h-4 bg-gray-200 rounded w-12 ml-2"></div>
        </div>
      </div>
      <div class="w-10 h-10 bg-gray-200 rounded-full"></div>
    </div>

    <!-- Services skeleton -->
    <div class="mb-4">
      <div class="flex flex-wrap gap-2">
        <div class="h-6 bg-gray-200 rounded-full w-20"></div>
        <div class="h-6 bg-gray-200 rounded-full w-24"></div>
        <div class="h-6 bg-gray-200 rounded-full w-16"></div>
      </div>
    </div>

    <!-- Contact skeleton -->
    <div class="space-y-2 mb-4">
      <div class="h-4 bg-gray-200 rounded w-32"></div>
    </div>

    <!-- Actions skeleton -->
    <div class="flex gap-3">
      <div class="flex-1 h-10 bg-gray-200 rounded-lg"></div>
      <div class="w-24 h-10 bg-gray-200 rounded-lg"></div>
    </div>
  </div>
</div>
